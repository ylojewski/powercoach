{
  "name": "@powercoach/config",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "ci": "pnpm lint && pnpm format && pnpm typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "typecheck": "tsc --project src/js/config.json --noEmit"
  },
  "files": [
    "src"
  ],
  "exports": {
    "./changeset.config.json": "./src/changeset/config.json",
    "./commitlint": "./src/commitlint/index.js",
    "./eslint": "./src/eslint/index.js",
    "./jsconfig.json": "./src/js/config.json",
    "./lint-staged": "./src/lint-staged/index.js",
    "./prettier": "./src/prettier/index.js",
    "./tsconfig.src.json": "./src/ts/src.json",
    "./tsconfig.test.json": "./src/ts/test.json",
    "./tsup": "./src/tsup/index.js",
    "./vitest": "./src/vitest/index.js"
  },
  "dependencies": {
    "globals": "^16.5.0"
  },
  "devDependencies": {
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "9.38.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript-eslint/utils": "^8.46.2",
    "eslint": "9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-json": "^4.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
