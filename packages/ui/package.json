{
  "name": "@powercoach/ui",
  "version": "0.1.0",
  "scripts": {
    "build": "vite build",
    "dev": "storybook dev -p 6006",
    "format": "prettier . --check",
    "format:write": "prettier . --write --list-different",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pre-commit": "pnpm lint:fix && pnpm format:write && pnpm typecheck && pnpm test && pnpm build",
    "preview": "vite preview",
    "shadcn:add": "tsx --tsconfig tsconfig.src.json scripts/shadcnAdd.ts",
    "test": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest",
    "typecheck": "pnpm run typecheck:src && pnpm run typecheck:test",
    "typecheck:src": "tsc --project tsconfig.src.json --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "style": "./dist/index.css",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./index.css": "./dist/index.css"
  },
  "devDependencies": {
    "@powercoach/config": "workspace:*",
    "@radix-ui/react-slot": "^1.2.4",
    "@storybook/react-vite": "^10.1.9",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^27.1.0",
    "lucide-react": "^0.561.0",
    "prettier": "^3.6.2",
    "shadcn": "^3.6.1",
    "storybook": "^10.1.9",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "react": "^19.2.2",
    "react-dom": "^19.2.2"
  },
  "engines": {
    "node": "20"
  },
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "private": true,
  "type": "module"
}
