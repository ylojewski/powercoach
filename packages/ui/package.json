{
  "devDependencies": {
    "@powercoach/config": "workspace:*",
    "@storybook/react-vite": "^10.1.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "storybook": "^10.1.9",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": "20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "name": "@powercoach/ui",
  "peerDependencies": {
    "react": "^19.2.2",
    "react-dom": "^19.2.2"
  },
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "storybook dev -p 6006",
    "format": "prettier . --check",
    "format:write": "prettier . --write --list-different",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pre-commit": "pnpm lint:fix && pnpm format:write && pnpm typecheck && pnpm test && pnpm build",
    "preview": "vite preview",
    "test": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest",
    "typecheck": "pnpm run typecheck:lib && pnpm run typecheck:test",
    "typecheck:lib": "tsc --project tsconfig.lib.json --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json --noEmit"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.1.0"
}
