{
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@powercoach/config": "workspace:*",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.8",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "9.38.0",
    "neon-testing": "^2.3.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": "20"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "node_modules"],
  "main": "dist/index.js",
  "name": "@powercoach/db",
  "private": true,
  "scripts": {
    "build": "tsup --config tsup.config.js",
    "ci": "pnpm lint && pnpm format && pnpm typecheck && pnpm test && pnpm build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest",
    "typecheck": "pnpm run typecheck:src && pnpm run typecheck:test",
    "typecheck:src": "tsc --project tsconfig.src.json --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json --noEmit"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": ["./src/index.ts"]
    }
  },
  "version": "0.1.0"
}
