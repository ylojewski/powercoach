{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "extends": "@power/config/tsconfig.base.json",
  "include": ["src", "test", "*.ts"]
}
