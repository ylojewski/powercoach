{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "test"],
  "extends": "@powercoach/config/tsconfig.src.json",
  "files": ["tsup.config.mjs"],
  "include": ["src", "*.ts"]
}
