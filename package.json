{
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@powercoach/config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": "20.x"
  },
  "name": "powercoach",
  "packageManager": "pnpm@10.20.0",
  "private": true,
  "scripts": {
    "build": "turbo build --concurrency=1",
    "ci": "turbo ci --concurrency=1",
    "commitlint": "commitlint",
    "deploy:api": "pnpm deploy --legacy --filter @powercoach/api --prod --ignore-scripts deploy/api",
    "dev": "turbo dev --concurrency=1",
    "format": "prettier . --check && turbo format --concurrency=1",
    "format:write": "prettier . --write && turbo format:write --concurrency=1",
    "lint": "turbo lint --concurrency=1",
    "lint-staged": "lint-staged",
    "lint:fix": "turbo lint --concurrency=1 -- --fix",
    "prepare": "husky",
    "test": "turbo test --concurrency=1",
    "typecheck": "turbo typecheck --concurrency=1"
  },
  "version": "0.1.0"
}
